<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">monospace</item>
        <item name="android:colorBackground">@color/background_material_light</item>
    </style>

    <style name="FriendStyle" parent="TextStyle">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BlockMessagesStyle" parent="TextStyle">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="ColorActionBar"
        parent="android:Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/black</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="BlockingMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="Theme.Slidr.Slidable" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:actionBarItemBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Slidr.Slidable.Activity" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="IndeterminateProgress" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
    </style>

    <style name="TransparentProgressDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
