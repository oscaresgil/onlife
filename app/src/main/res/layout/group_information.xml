<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light">
    <TextView
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:text="Friends in Group"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/friendInGroupListSimple"
        android:layout_width="match_parent"
        android:layout_marginRight="20dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="20dp"
        android:visibility="gone">
    </ListView>

    <com.jpardogo.listbuddies.lib.views.ListBuddiesLayout
        xmlns:listbuddies="http://schemas.android.com/apk/res-auto"
        android:id="@+id/friendInGroupList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

</LinearLayout>