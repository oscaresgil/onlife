<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LayoutGroups_LayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/layout_group_card_height"
    android:layout_margin="@dimen/layout_group_card_margin">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <net.soulwolf.widget.ratiolayout.widget.RatioImageView
                android:id="@+id/LayoutGroups_CircleImageViewGroup"
                android:layout_width="@dimen/layout_group_card_height"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/layout_group_margin_picture"
                android:layout_marginLeft="@dimen/layout_group_margin_picture"/>
            <TextView
                android:id="@+id/LayoutGroups_TextViewGroupName"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:textSize="@dimen/layout_group_text_size"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>