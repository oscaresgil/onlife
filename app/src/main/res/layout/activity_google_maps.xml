<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/ActivityGoogleMaps_LayoutMenu"
        android:orientation="horizontal"
        android:background="@color/gray_transparent"
        android:gravity="end"
        android:layout_gravity="end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/ActivityGoogleMaps_ButtonFriendLocation"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="getFriend"/>
        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/home_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="getHome"/>
        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/direction_button"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:onClick="getDirection"/>
        <com.gc.materialdesign.views.ButtonIcon
            android:id="@+id/close_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="closeMap"/>

    </LinearLayout>
    <fragment
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>