<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ActivityFriendBlock_ScrollViewMain"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:background="@color/background_material_light">

    <RelativeLayout
        android:id="@+id/ActivityFriendBlock_RelativeLayoutContact"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/ActivityFriendBlock_ImageViewContact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@color/black"
            android:adjustViewBounds="true"/>

        <android.support.v7.widget.CardView
            android:id="@+id/ActivityFriendBlock_CardViewMessage"
            android:layout_below="@id/ActivityFriendBlock_ImageViewContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_friend_block_card_view_margin">
            <RelativeLayout
                android:id="@+id/ActivityFriendBlock_RelativeLayoutMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusableInTouchMode="true"
                android:clickable="false">
                <TextView
                    style="@style/FriendStyle"
                    android:id="@+id/ActivityFriendBlock_TextViewMaxCharacters"
                    android:gravity="center"
                    android:layout_margin="@dimen/activity_friend_block_relative_layout_textview_maxlength_margin"
                    android:layout_width="@dimen/activity_friend_block_textview_maxlength_message"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:text="@string/max_characters_text"/>
                <LinearLayout
                    android:id="@+id/ActivityFriendBlock_LinearLayoutDivider"
                    android:orientation="vertical"
                    android:layout_below="@id/ActivityFriendBlock_TextViewMaxCharacters"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/activity_friend_block_linearlayout_divider_height"
                    android:layout_marginLeft="@dimen/activity_friend_block_linearlayout_divider_margin"
                    android:layout_marginRight="@dimen/activity_friend_block_linearlayout_divider_margin"
                    android:background="@color/black"
                    android:divider="@color/black"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    style="@style/BlockingMessage"
                    android:id="@+id/ActivityFriendBlock_EditTextMessage"
                    android:layout_below="@id/ActivityFriendBlock_TextViewMaxCharacters"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:hint="@string/send_a_message_bar"
                    android:layout_margin="@dimen/activity_friend_block_edittext_message_margin"
                    android:inputType="textCapSentences"
                    app:met_baseColor="@color/black"
                    app:met_primaryColor="@color/orange_light"
                    app:met_hideUnderline="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            style="@style/BlockMessagesStyle"
            android:id="@+id/ActivityFriendBlock_ButtonBlock"
            android:layout_below="@id/ActivityFriendBlock_CardViewMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_friend_block_button_block_margin"
            android:layout_centerHorizontal="true"
            android:onClick="block"
            android:paddingBottom="@dimen/activity_friend_block_button_block_padding"
            android:paddingTop="@dimen/activity_friend_block_button_block_padding"
            android:paddingRight="@dimen/activity_friend_block_button_block_padding_right"
            fancy:fb_borderWidth="@dimen/activity_friend_block_button_block_border"
            fancy:fb_defaultColor="@color/orange_light"
            fancy:fb_focusColor="@color/orange"
            fancy:fb_fontIconSize="@dimen/activity_friend_block_button_block_icon_size"
            fancy:fb_iconResource="@drawable/ic_action_lock"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="@dimen/activity_friend_block_button_block_radius"
            fancy:fb_text="@string/button_block"
            fancy:fb_textColor="@color/black"
            fancy:fb_textSize="@dimen/activity_friend_block_button_block_text_size"/>
    </RelativeLayout>
</ScrollView>