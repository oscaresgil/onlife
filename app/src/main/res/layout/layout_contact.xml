<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LayoutGroups_LayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/layout_contact_card_height"
    android:layout_margin="@dimen/layout_contact_card_margin">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:descendantFocusability="blocksDescendants">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/LayoutContact_ImageViewFriend"
                android:layout_width="@dimen/layout_contact_card_height"
                android:layout_height="match_parent"
                android:src="@drawable/loading_friend_icon"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/layout_contact_margin_picture"/>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="@dimen/layout_contact_card_height"
                android:layout_marginRight="@dimen/layout_contact_margin_visibility">
                <TextView
                    android:id="@+id/LayoutContact_TextViewNameFriend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/layout_contact_text_size"/>
                <ImageView
                    android:id="@+id/LayoutContact_VisibilityImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"/>
            </FrameLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>