<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        style="@style/BlockMessagesStyle"
        android:id="@+id/ActivityInBlock_TextViewUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@color/black"/>
    <TextView
        style="@style/FriendStyle"
        android:id="@+id/ActivityInBlock_TextViewMessage"
        android:layout_below="@id/ActivityInBlock_TextViewUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@color/black"/>
    <TextView
        style="@style/FriendStyle"
        android:id="@+id/ActivityInBlock_TextViewDistance"
        android:layout_below="@id/ActivityInBlock_TextViewMessage"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="2dp"
        android:textColor="@color/black"/>

    <Button
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ActivityInBlock_TextViewDistance"
        android:id="@+id/ActivityInBlock_ButtonShowLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_location"
        android:onClick="showLocation"/>

    <com.skyfishjy.library.RippleBackground
        android:layout_below="@id/ActivityInBlock_ButtonShowLocation"
        android:layout_margin="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ActivityInBlock_BlockAnimation"
        app:rb_color="@color/orange_light"
        app:rb_radius="32dp"
        app:rb_rippleAmount="5"
        app:rb_duration="3000"
        app:rb_scale="6">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
            android:id="@+id/ActivityInBlock_ImageBlock"
            android:src="@drawable/ic_https_black_48dp"/>
    </com.skyfishjy.library.RippleBackground>

</RelativeLayout>