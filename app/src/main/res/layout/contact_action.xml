<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="@color/background_material_light"
    android:id="@+id/scroll_contact">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_contact"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/PictureContact"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:background="@color/black"
            android:adjustViewBounds="true"/>

        <android.support.v7.widget.CardView
            android:id="@+id/SendMessageContact"
            android:layout_below="@id/PictureContact"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">
            <RelativeLayout
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/contactMessageText"
                android:focusableInTouchMode="true"
                android:clickable="false">
                <TextView
                    style="@style/FriendStyle"
                    android:gravity="center"
                    android:layout_margin="5dp"
                    android:id="@+id/maxCharactersContact"
                    android:layout_width="-50dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="0/30"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_below="@id/maxCharactersContact"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="fill_parent"
                    android:layout_height="0.25dp"
                    android:background="@color/black"
                    android:divider="@color/black"
                    android:id="@+id/linearLayout" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    style="@style/BlockingMessage"
                    android:layout_below="@id/maxCharactersContact"
                    android:id="@+id/messageContact"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:imeOptions="actionDone"
                    android:singleLine="true"
                    android:hint="@string/send_a_message_bar"
                    app:met_baseColor="@color/black"
                    app:met_primaryColor="@color/orange_light"
                    app:met_hideUnderline="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignRight="@+id/maxCharactersContact"
                    android:layout_alignEnd="@+id/maxCharactersContact"
                    android:capitalize="sentences"
                    android:elegantTextHeight="true" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <mehdi.sakout.fancybuttons.FancyButton xmlns:fancy="http://schemas.android.com/apk/res-auto"
            style="@style/BlockMessagesStyle"
            android:id="@+id/blockButtonContact"
            android:layout_below="@id/SendMessageContact"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:onClick="block"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            fancy:fb_borderWidth="1dp"
            fancy:fb_defaultColor="@color/orange_light"
            fancy:fb_focusColor="@color/orange"
            fancy:fb_fontIconSize="10dp"
            fancy:fb_iconResource="@drawable/ic_action_lock"
            fancy:fb_iconPosition="left"
            fancy:fb_radius="50dp"
            fancy:fb_text="@string/button_block"
            fancy:fb_textColor="@color/black"
            fancy:fb_textSize="15dp"/>

    </RelativeLayout>
</ScrollView>