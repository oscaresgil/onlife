<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent" android:layout_width="fill_parent"
    android:background="@color/background_material_light"
    android:id="@+id/scroll_contact">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_contact"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_gravity="center"
            android:id="@+id/avatar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            app:border_width="4dp"
            app:border_color="@color/orange_light"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp" />

        <RelativeLayout
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contactMessageText"
            android:focusableInTouchMode="true"
            android:clickable="false">
            <TextView
                style="@style/FriendStyle"
                android:layout_margin="5dp"
                android:id="@+id/maxCharactersContact"
                android:layout_width="-50dp"
                android:layout_height="wrap_content"
                android:text="0/30"
                android:layout_alignParentRight="true" />
            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/BlockingMessage"
                android:layout_below="@id/maxCharactersContact"
                android:id="@+id/messageContact"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:hint="@string/send_a_message"
                app:met_baseColor="@color/black"
                app:met_primaryColor="@color/orange_light"
                app:met_hideUnderline="true"/>
        </RelativeLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            style="@style/BlockingMessage"
            android:layout_margin="10dp"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/blockButtonContact"
            android:layout_gravity="center_horizontal"
            android:text="Block"
            android:onClick="block"
            android:background="@color/orange_light"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black" />

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
        </ScrollView>
    </LinearLayout>
</ScrollView>