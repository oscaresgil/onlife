<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent" android:layout_width="match_parent"
    android:background="@color/background_material_light">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layout_contact"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/layoutImage"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/avatar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                app:border_width="4dp"
                app:border_color="#5DFC0A"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />
        </RelativeLayout>

        <LinearLayout
            style="@style/AppTheme"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/contactMessageText"
            android:focusableInTouchMode="true"
            android:clickable="false">
            <com.rengwuxian.materialedittext.MaterialEditText
                style="@style/BlockingMessage"
                android:id="@+id/messageContact"
                android:layout_margin="5dp"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:textAlignment="center"
                android:inputType="textFilter"
                android:hint="@string/send_a_message"
                app:met_baseColor="@color/black"
                app:met_primaryColor="@color/orange_light"
                app:met_errorColor="@color/red"
                app:met_minCharacters="0"
                app:met_maxCharacters="30"
                app:met_hideUnderline="true"/>
        </LinearLayout>

        <com.gc.materialdesign.views.ButtonRectangle
            style="@style/BlockingMessage"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/blockButtonContact"
            android:layout_gravity="center_horizontal"
            android:text="Block"
            android:onClick="bloquear"
            android:background="@color/orange_light"
            android:layout_marginBottom="20dp"
            android:textColor="@color/black"
            android:textColorHighlight="@color/black" />

        <ScrollView
            android:id="@+id/ScrollView01"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">
        </ScrollView>
    </LinearLayout>
</ScrollView>