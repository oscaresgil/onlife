<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ActivityGroupBlock_CoordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:fitsSystemWindows="true">

    <android.support.v4.widget.NestedScrollView
        android:id="@+id/ActivityGroupBlock_ScrollView"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_below="@+id/ActivityFriendBlock_AppBar"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:id="@+id/ActivityGroupBlock_RelativeLayoutContact"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.CardView
                android:id="@+id/ActivityGroupBlock_CardViewMessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/activity_friend_block_card_view_margin">
                <RelativeLayout
                    android:id="@+id/ActivityGroupBlock_RelativeLayoutMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusableInTouchMode="true"
                    android:clickable="false">
                    <TextView
                        style="@style/FriendStyle"
                        android:id="@+id/ActivityGroupBlock_TextViewMaxCharacters"
                        android:gravity="center"
                        android:layout_margin="@dimen/activity_friend_block_relative_layout_textview_maxlength_margin"
                        android:layout_width="@dimen/activity_friend_block_textview_maxlength_message"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true"
                        android:text="@string/max_characters_text"/>
                    <LinearLayout
                        android:id="@+id/ActivityGroupBlock_LinearLayoutDivider"
                        android:orientation="vertical"
                        android:layout_below="@id/ActivityFriendBlock_TextViewMaxCharacters"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/activity_friend_block_linearlayout_divider_height"
                        android:layout_marginLeft="@dimen/activity_friend_block_linearlayout_divider_margin"
                        android:layout_marginRight="@dimen/activity_friend_block_linearlayout_divider_margin"
                        android:background="@color/black"
                        android:divider="@color/black"/>
                    <com.rengwuxian.materialedittext.MaterialEditText
                        style="@style/BlockingMessage"
                        android:id="@+id/ActivityGroupBlock_EditTextMessage"
                        android:layout_below="@id/ActivityFriendBlock_TextViewMaxCharacters"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:imeOptions="actionDone"
                        android:singleLine="true"
                        android:hint="@string/send_a_message_bar"
                        android:layout_margin="@dimen/activity_friend_block_edittext_message_margin"
                        android:inputType="textCapSentences"
                        app:met_baseColor="@color/black"
                        app:met_primaryColor="@color/orange_light"
                        app:met_hideUnderline="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <!--<GridView
                android:id="@+id/ActivityFriendBlock_GridLayout"
                android:background="@color/white"
                android:layout_width="fill_parent"
                android:layout_height="160dp"
                android:numColumns="3"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:gravity="center">
            </GridView>-->
        </RelativeLayout>
    </android.support.v4.widget.NestedScrollView>

    <android.support.design.widget.AppBarLayout
        android:id="@+id/ActivityFriendBlock_AppBar"
        android:layout_height="256dp"
        android:layout_width="match_parent"
        android:fitsSystemWindows="true">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/ActivityGroupBlock_CollapsingToolBarLayout"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/orange_light"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/ActivityGroupBlock_ImageViewContact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax"/>
                <TextView
                    style="@style/FriendStyle"
                    android:id="@+id/ActivityGroupBlock_TextViewNameBar"
                    android:layout_width="fill_parent"
                    android:layout_height="256dp"
                    android:padding="4dp"
                    android:layout_gravity="bottom"
                    android:layout_alignParentBottom="true"
                    android:textColor="@color/white"
                    android:textSize="12sp"
                    android:background="@color/black_transparent"/>
            </FrameLayout>
            <android.support.v7.widget.Toolbar
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/ActivityGroupBlock_ToolBar"
                android:layout_height="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"/>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/ActivityGroupBlock_ButtonBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="block"
        android:src="@drawable/ic_lock_black_24dp"
        app:borderWidth="0dp"
        app:layout_anchor="@id/ActivityFriendBlock_AppBar"
        app:backgroundTint="@color/orange_light"
        app:layout_anchorGravity="bottom|right|end"/>


</android.support.design.widget.CoordinatorLayout>