<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/LayoutSelectContactGroup_CardViewMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/LayoutSelectContactGroup_LayoutMain"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/LayoutSelectContactGroup_ImageViewFriend"
            android:layout_width="@dimen/layout_select_contact_group_image_height_width"
            android:layout_height="@dimen/layout_select_contact_group_image_height_width"
            android:src="@drawable/loading_friend_icon"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/layout_select_contact_image_margin"/>

        <TextView
            style="@style/FriendStyle"
            android:id="@+id/LayoutSelectContactGroup_TextViewNameFriend"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</android.support.v7.widget.CardView>