<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LayoutSelectContactGroup_LayoutMain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants">

	<ImageView
        android:id="@+id/LayoutBase_ImageViewFriend"
        android:layout_width="@dimen/layout_select_contact_group_image_height_width"
        android:layout_height="@dimen/layout_select_contact_group_image_height_width"
        android:src="@drawable/loading_friend_icon"
        android:scaleType="fitCenter"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/layout_select_contact_image_margin"/>

    <TextView
        style="@style/FriendStyle"
        android:id="@+id/LayoutBase_TextViewNameFriend"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>