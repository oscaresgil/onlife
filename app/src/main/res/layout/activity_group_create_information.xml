<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ActivityCreateGroup_RelativeLayoutMain"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/ActivityCreateGroup_LinearLayoutSubMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_group_create_information_linear_layout_sub_main_padding"
        android:animateLayoutChanges="true">

		<net.soulwolf.widget.ratiolayout.widget.RatioImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ActivityCreateGroup_ImageButtonSelectImage"
            android:layout_width="@dimen/layout_select_contact_group_image_height_width"
            android:layout_height="@dimen/layout_select_contact_group_image_height_width"
            android:scaleType="fitCenter"
            android:layout_margin="@dimen/activity_group_create_information_ratio_image_view_margin"
            app:datumRatio="datumWidth"
            app:widthRatio="1.0"
            app:heightRatio="1.0"/>
        <com.rengwuxian.materialedittext.MaterialEditText
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ActivityCreateGroup_EditTextNameGroup"
            android:layout_margin="@dimen/activity_group_create_information_edit_text_name_group_margin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:enabled="true"
            android:hint="@string/group_name"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/orange_light"
            app:met_errorColor="@color/red"
            app:met_hideUnderline="true"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/ActivityCreateGroup_FrameLayoutSelectFriends"
        android:layout_below="@id/ActivityCreateGroup_LinearLayoutSubMain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true">
        <com.melnykov.fab.FloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ActivityCreateGroup_FABSearchFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/activity_group_create_information_fab_search_margin_bottom"
            android:layout_marginRight="@dimen/activity_group_create_information_fab_search_margin_right"
            android:onClick="search"
            android:src="@drawable/ic_search_black_24dp"
            android:layout_gravity="right"
            fab:fab_colorNormal="@color/orange_light"
            fab:fab_colorPressed="@color/orange"
            fab:fab_shadow="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:id="@+id/ActivityCreateGroup_ListViewFriends"
                android:listSelector="@drawable/list_selector"/>
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>