<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_create_group"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_material_light"
    android:weightSum="1"
    android:animateLayoutChanges="true">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:animateLayoutChanges="true">

        <ImageButton
            android:id="@+id/imageView"
            android:layout_width="138dp"
            android:layout_height="138dp"
            android:src="@drawable/ic_photo_camera_black_48dp"/>

        <com.rengwuxian.materialedittext.MaterialEditText
            xmlns:app="http://schemas.android.com/apk/res-auto"
            style="@style/BlockingMessage"
            android:id="@+id/nameNewGroup"
            android:layout_margin="3dp"
            android:layout_width="fill_parent"
            android:layout_height="138dp"
            android:gravity="center"
            android:enabled="true"
            android:hint="@string/group_name"
            app:met_baseColor="@color/black"
            app:met_primaryColor="@color/orange_light"
            app:met_errorColor="@color/red"
            app:met_hideUnderline="true"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/body"
        android:layout_below="@id/header"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:animateLayoutChanges="true">
        <com.melnykov.fab.FloatingActionButton
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-20dp"
            android:onClick="search"
            android:src="@drawable/ic_ic_search_black_48dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            fab:fab_colorNormal="@color/orange_light"
            fab:fab_colorPressed="@color/orange"
            fab:fab_shadow="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ListView
                android:layout_height="fill_parent"
                android:layout_width="fill_parent"
                android:id="@+id/listView"
                android:listSelector="@drawable/list_selector"
                android:layout_weight="1" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>